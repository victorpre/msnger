<div class="row">
  <div class="col s12">
    <h4>Sign up</h4>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "col s12"}) do |f| %>
  
    <%= devise_error_messages! %>
    <div class="row">
      <div class="input-field col s6">
        <%= f.text_field :name, class: 'validate' %>
        <%= f.label :name %>
      </div>

      <div class="input-field col s6">
        <%= f.text_field :last_name, class: 'validate' %>
        <%= f.label :last_name %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :username, class: 'validate'%>
        <%= f.label :username %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.email_field :email, class: 'validate'%>
        <%= f.label :email %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password, autocomplete: "off" %>
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <%= f.label :password_confirmation %>
      </div>
    </div>
    
    <div class="actions">
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </div>
<% end %>
<script>
  fixFieldErrors();
</script>
<%= render "devise/shared/links" %>
